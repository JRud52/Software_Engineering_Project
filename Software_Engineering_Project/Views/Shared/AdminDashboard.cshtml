@model Software_Engineering_Project.Models.AdminDashModel

<div class="row" id="app-content">
    <div class="col-md-12">
        <h2>Admin Dashboard</h2>
        <h4>Hello @Model.name</h4>
        <br />
    </div>

    <div class="col-md-7">
        
        <h5>Users</h5>
        <table>
            <tr>
                <th>ID</th>
                <th>EMAIL</th>
                <th>NAME</th>
                <th>PRIVILAGE</th>
                <th>EDIT</th>
            </tr>
            @foreach (var user in Model.users)
            {
                if (user.privilage < 3) { 
                <tr>
                    <td>@user.id</td>
                    <td>@user.email</td>
                    <td>@user.name</td>
                    <td>@user.privilage</td>
                    <td>
                        <button class="form-control showButton"></button>
                        

                    </td>
                </tr>
                }
            }

        </table>

        <br/>
        <input type="button" class="form-control showButton" value="Add user" onclick="location.href='@Url.Action("UserAdd", "User")'" />
        <br />

    </div>

    <div class="col-md-5">
        <h5>Rooms</h5>
        <table>
            <tr>
                <th>ID</th>
                <th>DESCRIPTION</th>
                <th>CAPACITY</th>
                <th>EDIT</th>
            </tr>
            @foreach (var room in Model.rooms)
            {
                    <tr>
                        <td>@room.id</td>
                        <td>@room.descriptor</td>
                        <td>@room.capacity</td>
                        <td>
                            <button class="form-control showButton"></button>
                        </td>
                    </tr>
            }

        </table>

        <br />
        <input type="button" class="form-control showButton" value="Add room" onclick="location.href='@Url.Action("RoomAdd", "User")'" />
        <br />
    </div>

</div>
