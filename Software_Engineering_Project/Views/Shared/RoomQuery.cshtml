@model Software_Engineering_Project.Models.Rooms
@{
    using (Html.BeginForm("QueryRoom", "Home", FormMethod.Post))
    {
        @Html.TextBoxFor(model => model.capacity, new { @type = "number", @class = "form-control", @id = "capacity", @placeholder = "Capacity" })
        <br />

        //Replace this number input with checkboxes for each possilbe descriptor which will be queried from the DB
        @Html.TextBoxFor(model => model.descriptorID, new { @type = "number", @class = "form-control", @id = "descriptor", @placeholder = "Descriptor" })        

        <br />
        <input type="submit" class="btn btn-primary" value="Search" />
    }
}
