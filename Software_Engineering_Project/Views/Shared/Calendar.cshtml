@for (int i = 0; i < 5; i++)
{
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-4"></div> <!-- this column empty -->
                <div class="col-md-4"> @(7 * i + 1) </div>
                <div class="col-md-4"> @(7 * i + 2) </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="row">

                @for (int j = 3; j <= 8; j++)
                {
                    if (j != 8)
                    {
                        if (7 * i + j > 31)
                        {
                            <div class="col-md-2"></div><!-- this column empty -->
                        }
                        else
                        {
                            <div class="col-md-2"> @(7 * i + j) </div>
                        }
                    }
                    else
                    {
                        <div class="col-md-2"></div> <!-- this column empty -->
                    }                       
                }
            </div>
        </div>
    </div>
}
