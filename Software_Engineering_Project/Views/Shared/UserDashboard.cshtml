@model Tuple<Software_Engineering_Project.Models.Users, Software_Engineering_Project.Models.Calendar>

<div class="row" id="app-content">

    <div class="col-md-5">
        <h2>Dashboard</h2>
        <h3>Hello @Model.Item1.name</h3>

        <br />

        <div class="row">
            <div class="col-md-12">
                <h4>Current Bookings</h4>
            </div>      

            <div class="col-md-12 card">   
                <div class="row card-block">
                    <div class="col-md-3">
                        <p>Room Number</p>
                    </div>
                    <div class="col-md-3">
                        <p>Date</p>
                    </div>
                    <div class="col-md-3">
                        <p>Start - End Time</p>
                    </div>
                    <div class="col-md-3">
                        @Html.ActionLink("Release", "ReleaseRoom", "Booking", new { @class = "btn btn-primary" })
                    </div>
                    <div class="col-md-12">
                        <p>Description</p>
                    </div>
                </div>   
            </div> 
            
        </div>

        <br />

        <div class="row">
            <div class="col-md-12 text-center">                
                @Html.ActionLink("Book A Room", "BookRoom", "Booking", null, new { @class = "btn btn-primary btn-lg" })                
            </div>
        </div>

    </div>

    <div class="col-md-7">
        @Html.Partial("Calendar", Model.Item2)
    </div>

</div>
