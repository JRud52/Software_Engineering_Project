@helper RenderCalendar(int size)
{
    <div class="container">
        @size = 31
        @for (int i = 0; i < size; i++)
        {
            @if (size % 7 == 0) {
                <div class="row">
            }
                
                    <div class="col-md-1">
                        <div class="well well-sm">
                            <img src="http://placehold.it/150x150" />
                        </div>
                    </div>

            @if (size % 7 == 0) {
                </div>
            }
        }
    </div>
}