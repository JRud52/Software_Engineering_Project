@helper RenderCalendar(int size)
{
    <div class="container">
        <div class="row">
        @for (int i = 0; i < size; i++)
        {                            
                <div class="col-md-1">
                    <div class="well well-sm">
                        <img src="http://placehold.it/150x150" />
                    </div>
                </div>

            @if (i % 7 == 0 && i != 0)
            {               
                </div>

                @if(i != size - 1) { 
                    <div class="row">
                }
            }
        }
    
    </div>
}